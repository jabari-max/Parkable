CREATE TABLE tb_estacionamento
(
    id              BIGINT GENERATED BY DEFAULT AS IDENTITY NOT NULL,
    placa           VARCHAR(255)                            NOT NULL,
    horario_entrada TIMESTAMP WITHOUT TIME ZONE             NOT NULL,
    horario_saida   TIMESTAMP WITHOUT TIME ZONE,
    valor           DECIMAL,
    vaga_id         BIGINT                                  NOT NULL,
    tipo_veiculo    VARCHAR(255)                            NOT NULL,
    CONSTRAINT pk_tb_estacionamento PRIMARY KEY (id)
);

ALTER TABLE tb_estacionamento
    ADD CONSTRAINT FK_TB_ESTACIONAMENTO_ON_VAGA FOREIGN KEY (vaga_id) REFERENCES tb_vaga (id);

CREATE TABLE tb_vaga
(
    id          BIGINT GENERATED BY DEFAULT AS IDENTITY NOT NULL,
    codigo_vaga VARCHAR(255),
    ocupada     BOOLEAN                                 NOT NULL,
    CONSTRAINT pk_tb_vaga PRIMARY KEY (id)
);